<div class="featured_records section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
    <div class="page-width">
        <div class="featured_records_desktop">
            {% for block in section.blocks %}
                
                {% assign product = block.settings.product %}

                <div class="featured_record">
                    <p>{{ product.metafields.custom.artist }}</p>
                    <h2>{{ product.title }}</h2>
                </div>
                
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Featured Records",
    "settings": [
        {
            "type": "color_scheme",
            "id": "section_color_scheme",
            "label": "Color Scheme",
            "default": "scheme-1"
        }
    ],
    "blocks": [
        {
            "name": "Product",
            "type": "product",
            "limit": 6,
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                },
                {
                    "type": "text",
                    "id": "textarea",
                    "label": "Text"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label"
                }
            ]

        }
    ],
    "presets": [
        {
            "name": "Featured Records"
        }
    ]
}
{% endschema %}