{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-price-list-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-price-list-header-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-price-list-title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-price-list-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-price-list-items-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-price-list-item-{{ ai_gen_id }} {
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: {{ block.settings.item_border_thickness }}px solid {{ block.settings.item_border_color }};
  }

  .ai-price-list-item-main-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 16px;
  }

  .ai-price-list-item-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-price-list-item-name-{{ ai_gen_id }} {
    margin: 0 0 4px;
    font-size: {{ block.settings.item_name_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-price-list-item-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.item_description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
  }

  .ai-price-list-item-price-{{ ai_gen_id }} {
    flex-shrink: 0;
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
    white-space: nowrap;
  }

  .ai-price-list-divider-{{ ai_gen_id }} {
    flex: 1;
    min-width: 20px;
    height: 1px;
    background: repeating-linear-gradient(
      to right,
      {{ block.settings.divider_color }} 0,
      {{ block.settings.divider_color }} 4px,
      transparent 4px,
      transparent 8px
    );
    align-self: center;
    margin: 0 8px;
  }

  .ai-price-list-item-top-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-price-list-addons-{{ ai_gen_id }} {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid {{ block.settings.addon_divider_color }};
  }

  .ai-price-list-addons-title-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.addon_title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
    opacity: 0.9;
  }

  .ai-price-list-addon-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .ai-price-list-addon-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    font-size: {{ block.settings.addon_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-price-list-addon-name-{{ ai_gen_id }} {
    flex: 1;
    opacity: 0.8;
  }

  .ai-price-list-addon-price-{{ ai_gen_id }} {
    flex-shrink: 0;
    font-weight: 600;
    color: {{ block.settings.addon_price_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-price-list-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-price-list-item-main-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .ai-price-list-divider-{{ ai_gen_id }} {
      display: none;
    }

    .ai-price-list-item-top-{{ ai_gen_id }} {
      width: 100%;
      justify-content: space-between;
    }
  }
{% endstyle %}

<price-list-{{ ai_gen_id }} class="ai-price-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank or block.settings.description != blank %}
    <div class="ai-price-list-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-price-list-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-price-list-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-price-list-items-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign item_name_key = 'item_' | append: i | append: '_name'
        assign item_description_key = 'item_' | append: i | append: '_description'
        assign item_price_key = 'item_' | append: i | append: '_price'
        assign addon_1_name_key = 'item_' | append: i | append: '_addon_1_name'
        assign addon_1_price_key = 'item_' | append: i | append: '_addon_1_price'
        assign addon_2_name_key = 'item_' | append: i | append: '_addon_2_name'
        assign addon_2_price_key = 'item_' | append: i | append: '_addon_2_price'
        assign addon_3_name_key = 'item_' | append: i | append: '_addon_3_name'
        assign addon_3_price_key = 'item_' | append: i | append: '_addon_3_price'
        
        assign item_name = block.settings[item_name_key]
        assign item_description = block.settings[item_description_key]
        assign item_price = block.settings[item_price_key]
        assign addon_1_name = block.settings[addon_1_name_key]
        assign addon_1_price = block.settings[addon_1_price_key]
        assign addon_2_name = block.settings[addon_2_name_key]
        assign addon_2_price = block.settings[addon_2_price_key]
        assign addon_3_name = block.settings[addon_3_name_key]
        assign addon_3_price = block.settings[addon_3_price_key]
      %}

      {% if item_name != blank %}
        <div class="ai-price-list-item-{{ ai_gen_id }}">
          <div class="ai-price-list-item-main-{{ ai_gen_id }}">
            <div class="ai-price-list-item-content-{{ ai_gen_id }}">
              <div class="ai-price-list-item-top-{{ ai_gen_id }}">
                <h3 class="ai-price-list-item-name-{{ ai_gen_id }}">{{ item_name }}</h3>
                {% if block.settings.show_divider %}
                  <div class="ai-price-list-divider-{{ ai_gen_id }}"></div>
                {% endif %}
                <div class="ai-price-list-item-price-{{ ai_gen_id }}">{{ item_price }}</div>
              </div>
              {% if item_description != blank %}
                <p class="ai-price-list-item-description-{{ ai_gen_id }}">{{ item_description }}</p>
              {% endif %}
            </div>
          </div>

          {% if addon_1_name != blank or addon_2_name != blank or addon_3_name != blank %}
            <div class="ai-price-list-addons-{{ ai_gen_id }}">
              <div class="ai-price-list-addons-title-{{ ai_gen_id }}">{{ block.settings.addon_label }}</div>
              <div class="ai-price-list-addon-list-{{ ai_gen_id }}">
                {% if addon_1_name != blank %}
                  <div class="ai-price-list-addon-{{ ai_gen_id }}">
                    <span class="ai-price-list-addon-name-{{ ai_gen_id }}">{{ addon_1_name }}</span>
                    <span class="ai-price-list-addon-price-{{ ai_gen_id }}">{{ addon_1_price }}</span>
                  </div>
                {% endif %}
                {% if addon_2_name != blank %}
                  <div class="ai-price-list-addon-{{ ai_gen_id }}">
                    <span class="ai-price-list-addon-name-{{ ai_gen_id }}">{{ addon_2_name }}</span>
                    <span class="ai-price-list-addon-price-{{ ai_gen_id }}">{{ addon_2_price }}</span>
                  </div>
                {% endif %}
                {% if addon_3_name != blank %}
                  <div class="ai-price-list-addon-{{ ai_gen_id }}">
                    <span class="ai-price-list-addon-name-{{ ai_gen_id }}">{{ addon_3_name }}</span>
                    <span class="ai-price-list-addon-price-{{ ai_gen_id }}">{{ addon_3_price }}</span>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</price-list-{{ ai_gen_id }}>

<script>
  (function() {
    class PriceList{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('price-list-{{ ai_gen_id }}', PriceList{{ ai_gen_id }});
  })();
</script>

